<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local1="clr-namespace:UnlockTheMinde.ViewModels"
             x:Class="UnlockTheMinde.Views.IndexPage"
               Shell.NavBarIsVisible="False"
             HeightRequest="50"
             >

    <ContentPage.BindingContext>
        <local1:IndexViewModel/>
    </ContentPage.BindingContext>


    <ContentPage.Content>
        <StackLayout
            VerticalOptions="Center"
            HorizontalOptions="CenterAndExpand">
            <Image
                Source="BrainsColor"/>
            <Button
                Text="Unlock The Mind"
                TextColor="#7ED957"
                FontSize="Medium"
                FontAttributes="Bold"
                BackgroundColor="Black"
                Command="{Binding Unlock}"
                />
            <Image
                Source="BrainsColor"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>